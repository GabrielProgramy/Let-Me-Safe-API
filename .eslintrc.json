{
	"env": {
		"es2021": true,
		"node": true
	},
	"extends": [
		"standard"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": [
		"@typescript-eslint"
	],
	"rules": {
		"indent": "off",
		"space-before-function-paren": "off",
		"n/no-path-concat": "off"
	}
}
