{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": [
    "standard",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "indent": "off",
    "space-before-function-paren": "off",
    "n/no-path-concat": "off",
    "no-tabs": "off"
  }
}
